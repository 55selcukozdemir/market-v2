<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridviewadapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#AE1F1F">

    <ImageView
        android:id="@+id/grid_view_product_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/grid_view_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Price"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/grid_view_product_image_view"
        app:layout_constraintStart_toStartOf="@+id/grid_view_product_image_view"
        app:layout_constraintTop_toBottomOf="@+id/grid_view_product_image_view" />

    <TextView
        android:id="@+id/grid_view_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Product Name"
        app:layout_constraintEnd_toEndOf="@+id/grid_view_product_image_view"
        app:layout_constraintStart_toStartOf="@+id/grid_view_product_image_view"
        app:layout_constraintTop_toBottomOf="@+id/grid_view_price_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>